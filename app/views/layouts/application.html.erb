<!DOCTYPE html>
<html>
<head>
  <title>All My Notes</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script language="javascript" type="text/javascript">
	function appendForm() {
		$(".content-nav").after("<div class='form-panel'> <%= escape_javascript(render(:partial =>'notes/form')) %> </div>");
		$(".add-btn").attr("onClick","hideForm()");
		$(".add-btn").html("<i class='icon-arrow-up icon-white'></i> Скрыть");
   }
   function hideForm() {
	 $(".form-panel").remove();
	 $(".add-btn").html("<i class='icon-plus icon-white'></i> Добавить заметку");
	 $(".add-btn").attr("onClick","appendForm()");
	}
	</script>
</head>
<body>
	<div class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#"><i class="icon-pencil icon-white">AllMyNotes2</i></a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Browse Products", notes_path %></li>
            <li><%= link_to "Price List" %></li>
            <li><%= link_to "Contact Us" %></li>
            <li><%= link_to "Cart" %></li>
          </ul>
        </div>
      </div>
    </div>	
	</div>
	<div class="container main_panel">
	<% flash.each do |name, msg| %>
	<div class="alert alert-<%= name == :notice ? 'success' : 'error' %>">
		<a class="close" data-dismiss="alert">&times</a>
		<%= msg %>
	</div>
	<% end %>
	<div class="row">
		<div class="span3">
			<ul class="nav nav-pills nav-stacked">
			  <li class="active"><a href="#">Home</a></li>
			  <li><a href="#">Home</a></li>
			  <li><a href="#" data-title="popover title" class="new_note">Library</a></li>
			  <li class="divider"></li>
			  <li><%= link_to "Home"%> </li>
			  <li><%= link_to('Popover test', '#', :class => "new-note-input",:title => "This is a test") %>
			  </li>
			  <li><a href="#" class="new-note-input" data-original-title="Someth">Heelooo</a></li>
			</ul>
		</div>
		<div class="span9">
			<div class="navbar content-nav">
			  <div class="navbar-inner">
				 <div class="btn-group" >
					  <button class="btn add-btn" onClick="appendForm()">
							<i class="icon-plus icon-white"></i>
							 Добавить заметку					  
					  </button>
					  <button class="btn dropdown-toggle" data-toggle="dropdown">
					    <span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu">
					    <li><%= link_to "Ссылка"%> </li>
					    <li><%= link_to "Текст"%> </li>
					    <li><%= link_to "Изображение"%> </li>
					  </ul>
				  </div>
				 
			    <div class="btn-group pull-right">
				  <button class="btn"><i class="icon-list"></i></button>
				  <button class="btn"><i class="icon-th"></i></button>
				  <button class="btn"><i class="icon-search"></i></button>
				</div>
			  </div>
			</div>
			<%= yield %>
		</div>
	</div>
</div>
</body>
</html>