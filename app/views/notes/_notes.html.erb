
<%= form_tag multiple_action_notes_path, :class=>"multi_action_form" do |f|%>
 <div class="navbar">
<div class="navbar-inner">
 <div class="btn-group" >	
     
     <%= text_field_tag(:search_field, nil, :class=>"span3", :placeholder=>"Search", :style=>"margin-bottom:0; border-right:none; border-top-right-radius:0; border-bottom-right-radius:0") %>
     
     <%= button_tag :name=>"search_btn", :class=>"btn search-btn" do %>
     		<i class="icon-search"></i>
     <% end %> 
     
     <%= button_tag :name=>"list_btn", :class=>"btn list-btn hidden-phone" do %>
     		<i class="icon-list"></i>
     <% end %>    
     <button class="btn th-btn hidden-phone"><i class="icon-th"></i></button>    
	  
	  <%= button_tag :class=>"btn add_to_group_btn",
	   :data=>{:toggle=>"popover", :content=>"#{render 'groups/add_form'}"}, :title => "Send to group" do %>
     	 <i class="icon-folder-open icon-white"></i>
	  <% end %>
	  
	  <%= button_tag :name=>"destroy_btn", :class=>"btn hidden-phone", data: { confirm: 'Are you sure?' },
	   :title=>"Delete checked" do %>
     		<i class="icon-trash"></i>
     <% end %>
	  
	  <%= link_to new_note_path, :class=>"btn", :remote=>true do %>
			<i class="icon-plus icon-white"></i>
			Add note				  
	  <% end %>  
	  <button class="btn dropdown-toggle" data-toggle="dropdown" >
			<span class="caret"></span>	  
	  </button>
	  <ul class="dropdown-menu pull-right", name="new_btn" >
	    <li><%= link_to "Image" %></li>
	    <li><%= link_to "File" %></li>
	    <li><%= link_to "Video link" %></li>
	  </ul>	
  </div>
  </div>
</div> 
<%- model_class = Note -%>
	<%= render :partial=>"notes/item" %>
<% end %>
