<div class="hero-unit">
<legend>Sign up</legend>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="control-group"><%= f.label :email %>
  <%= f.email_field :email, :class => 'text_field', :autofocus => true %></div>

  <div class="control-group"><%= f.label :password %>
  <%= f.password_field :password, :class => 'text_field' %></div>

  <div class="control-group"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class => 'text_field' %></div>
  
  <div><%= f.submit "Sign up", :class=>"btn" %></div>
<% end %>
<%= render "devise/shared/links" %>
</div>